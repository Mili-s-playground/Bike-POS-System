{
  "name": "bike-pos-system",
  "version": "1.0.0",
  "description": "Multi-outlet Bike POS System",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "start": "PORT=3000 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "preelectron-pack": "npm run build",
    "server": "PORT=5000 node server/server.js",
    "dev": "concurrently \"npm run server\" \"npm run electron-dev\"",
    "build-all": "npm run build && npm run copy-server",
    "copy-server": "mkdir -p build && cp -r server build/ && cp package.json build/",
    "dist": "npm run build-all && electron-builder",
    "dist-linux": "npm run build-all && electron-builder --linux",
    "dist-win": "npm run build-all && electron-builder --win",
    "dist-mac": "npm run build-all && electron-builder --mac"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "react-router-dom": "^6.8.0",
    "axios": "^1.3.0",
    "bootstrap": "^5.2.3",
    "bootstrap-icons": "^1.10.3",
    "react-bootstrap": "^2.7.0",
    "react-datepicker": "^4.8.0",
    "express": "^4.18.2",
    "mongoose": "^6.8.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "helmet": "^6.0.1",
    "express-rate-limit": "^6.7.0",
    "joi": "^17.7.0"
  },
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "concurrently": "^7.6.0",
    "wait-on": "^7.0.1",
    "electron-is-dev": "^2.0.0"
  },
  "build": {
    "appId": "com.bikepos.app",
    "productName": "Bike POS System",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "electron/main.js",
      "electron/preload.js",
      "electron/assets/**/*",
      "server/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "server",
        "to": "server"
      }
    ],
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Office",
      "maintainer": "Bike POS Team",
      "vendor": "Bike POS System",
      "desktop": {
        "Name": "Bike POS System",
        "Comment": "Point of Sale system for bike retailers",
        "Keywords": "pos;retail;bike;sales;inventory"
      }
    },
    "win": {
      "target": "nsis",
      "icon": "electron/assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "electron/assets/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
